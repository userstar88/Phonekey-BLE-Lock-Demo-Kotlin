<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/deviceListFragment">

    <fragment
        android:id="@+id/deviceListFragment"
        android:name="com.userstar.phonekeybasicfunctiondemokotlin.views.DeviceListFragment"
        android:label="device_list_fragment"
        tools:layout="@layout/device_list_fragment" >
        <action
            android:id="@+id/action_deviceListFragment_to_deviceFragment"
            app:destination="@id/deviceFragment">

            <argument
                android:name="scanResult"
                app:argType="android.bluetooth.le.ScanResult"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/deviceFragment"
        android:name="com.userstar.phonekeybasicfunctiondemokotlin.views.DeviceFragment"
        android:label="device_fragment"
        tools:layout="@layout/device_fragment" />
</navigation>